---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export async function getStaticPaths() {
  const products = await getCollection('products');
  return products.map(product => ({
    params: { id: product.id },
    props: { product },
  }));
}

const { product } = Astro.props;
const { Content } = await render(product);
---

<Layout>
  <div class="container mx-auto px-4 py-8">
    <a href="/products" class="btn btn-ghost mb-8">‚Üê Back to List</a>
    
    <div class="flex flex-col lg:flex-row gap-12">
        <!-- Image -->
        <div class="w-full lg:w-1/2">
            <img src={product.data.image || "https://placehold.co/600x400?text=Product+Image"} alt={product.data.name} class="rounded-2xl shadow-lg w-full object-cover" />
        </div>

        <!-- Info -->
        <div class="w-full lg:w-1/2 lg:max-h-[80vh] lg:overflow-y-auto lg:border lg:border-base-300 lg:rounded-xl lg:p-8 lg:shadow-inner bg-base-100/50">
            <div class="badge badge-accent mb-4">{product.data.category}</div>
            <h1 class="text-4xl font-bold mb-4">{product.data.name}</h1>
            <p class="text-xl text-gray-600 mb-8">{product.data.summary}</p>
            
            <div class="prose max-w-none mb-8">
                <h3 class="text-xl font-bold mb-2">Description</h3>
                <p class="whitespace-pre-line">{product.data.description}</p>
            </div>

            <div class="card bg-base-200 shadow-sm p-6">
                <h3 class="text-xl font-bold mb-4">Specifications</h3>
                <table class="table">
                    <tbody>
                        {product.data.specs?.map(spec => (
                            <tr>
                                <th class="w-1/3">{spec.label}</th>
                                <td>{spec.value}</td>
                            </tr>
                        ))}
                    </tbody>
                </table>
            </div>

            <div class="mt-8 prose max-w-none">
                <h3 class="text-xl font-bold mb-4">Additional Information</h3>
                <Content />
            </div>
        </div>
    </div>
  </div>
</Layout>
