---
import companyInfo from '../data/company_info.yaml';
const today = new Date();
---

<footer class="bg-neutral text-neutral-content">
  <div class="footer max-w-6xl mx-auto p-10 lg:grid-cols-3 lg:grid-flow-col lg:gap-8 justify-between">
    <!-- Brand Section -->
    <aside>
      <div class="font-bold text-3xl mb-2">{companyInfo.name}</div>
    </aside>

    <!-- Navigation Links -->
    <nav>
      <h6 class="footer-title opacity-100 text-white">Sitemap</h6> 
      <a href="/about" class="link link-hover">회사소개</a>
      <a href="/products" class="link link-hover">제품소개</a>
      <a href="/notice" class="link link-hover">공지사항</a>
    </nav>
    
    <!-- Contact Info -->
    <nav>
      <h6 class="footer-title opacity-100 text-white">Contact Us</h6> 
      
      <div class="flex gap-3 items-start">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mt-1 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
        </svg>
        <span>{companyInfo.address}</span>
      </div>

      <div class="flex gap-3 items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        <span>{companyInfo.tel}</span>
      </div>

      <div class="flex gap-3 items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        <span>{companyInfo.mail}</span>
      </div>
    </nav>
  </div>

  <!-- Copyright -->
  <div class="footer footer-center p-4 bg-neutral-900 text-neutral-content/50 border-t border-neutral-content/10">
    <aside>
      <p>Copyright © {today.getFullYear()} {companyInfo.name}. All rights reserved.</p>
    </aside>
  </div>
</footer>
